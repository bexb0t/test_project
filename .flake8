[flake8]
max-line-length = 119
select = C,E,F,W,B,B950
ignore = E203,E501,W503
extend-ignore = E741
per-file-ignores =
    # Example per-file ignores
    */__init__.py: F401

[flake8.extension]
enabled =
    # Enable flake8-length plugin
    H101,H201,H301,H401,H403,H404,H405,
    # Enable other plugins as needed
    RST E302 E305
